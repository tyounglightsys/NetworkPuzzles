<ThemedBoxLayout>:
    padding: dp(5)
    spacing: dp(3)

<SingleRowLayout>:
    size_hint_max_y: app.BUTTON_MAX_H + dp(8)
    padding: (dp(1), dp(1), dp(1), dp(1))
    spacing: dp(2)

<ActionPopupButtons>:
    PopupButton:
        text: root.cancel_text
        on_release: root.cancel()
    PopupButton:
        text: root.okay_text
        on_release: root.okay()

<AppTray>:
    size_hint: (None, None)
    padding: [self.padding[0], 0, self.padding[2], 0] if self.orientation == "horizontal" else [0, self.padding[1], 0, self.padding[3]]

<MenuLayout@RelativeLayout>:
    padding: dp(5)
    spacing: dp(3)

<SelectableRecycleBoxLayout>:
    padding: dp(0)

<PuzzleLayout>:
    padding: dp(50)  # FIXME: this is not actually applied

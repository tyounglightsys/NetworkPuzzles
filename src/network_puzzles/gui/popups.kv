<ThemedPopup>:
    title_size: app.BUTTON_FONT_SIZE
    size_hint: (0.5, 0.75)
    separator_color: app.theme.detail

<ChooseNicPopup>:
    size_hint_x: 0.5
    title: f"{self.device.hostname} | {_('Choose NIC')}"
    ThemedBoxLayout:
        orientation: "vertical"
        NICsRecView:
            size_hint_y: 0.8
            root: root
            id: nics_list
        ActionPopupButtons:
            on_cancel: root.on_cancel()
            on_okay: root.on_okay()

<CommandPopup>:
    title: _("Input command:")
    size_hint_y: 0.25
    ThemedBoxLayout:
        orientation: "vertical"
        ValueInput:
            id: text_input
            on_text_validate: root.on_okay()
        ActionPopupButtons:  # cancel/okay
            on_cancel: root.on_cancel()
            on_okay: root.on_okay()

<DeviceCommandsPopup>:
    size_hint_x: 0.4

<EditDhcpPopup>:
    title: _("Edit DHCP configuration")
    ThemedBoxLayout:
        orientation: "vertical"
        SingleRowLayout:
            size_hint_y: 0.2
            CheckBoxLabel:
                text: _("IP Address")
            CheckBoxLabel:
                text: _("Range Start")
            CheckBoxLabel:
                text: _("Range End")
        ThemedBoxLayout:
            padding: (dp(0), dp(0), dp(0), dp(0))
            size_hint_y: 0.2
            id: dhcp_configs_layout
            orientation: "vertical"
        Widget:
        ActionPopupButtons:
            on_cancel: root.on_cancel()
            on_okay: root.on_okay()

<EditIpPopup>:
    size_hint_x: 0.5
    title: _("Edit IP configuration")
    ThemedBoxLayout:
        orientation: "vertical"
        SingleRowLayout:
            CheckBoxLabel:
                text: _("IP Address:")
            ValueInput:
                text: root.ip_address.address
                on_focus: root.set_address(self)
        SingleRowLayout:
            CheckBoxLabel:
                text: _("Netmask:")
            ValueInput:
                text: root.ip_address.netmask
                on_focus: root.set_netmask(self)
        SingleRowLayout:
            CheckBoxLabel:
                text: _("Gateway:")
            ValueInput:
                text: root.ip_address.gateway
                on_focus: root.set_gateway(self)
                disabled: True
        Widget:
        ActionPopupButtons:
            on_cancel: root.on_cancel()
            on_okay: root.on_okay()

<ExceptionPopup>:
    title: _("Error")
    size_hint: (0.75, 0.75)
    ThemedBoxLayout:
        orientation: 'vertical'
        ThemedScrollView:
            size_hint_y: 0.8
            TerminalLabel:
                id: exception
                padding: dp(3)
                size_hint: (None, None)
                text_size: (self.parent.parent.width, None)
                height: self.line_height * len(self.text.split('\n')) + dp(2)
                width: self.parent.parent.width - self.padding[1] - self.padding[3]

        HSeparator:
        PopupButton:
            pos_hint: {"center_x": 0.5}
            size_hint_x: 0.2
            text: _("Quit")
            on_release: app.stop()

<PingHostPopup>:
    size_hint: (0.5, 0.4)
    ThemedBoxLayout:
        orientation: 'vertical'
        ValueInput:
            id: host
            hint_text: _("hostname or IP")
            on_text_validate: root.on_okay(root.ids.host.text)
        Widget:
        ActionPopupButtons:
            on_cancel: root.on_cancel()
            on_okay: root.on_okay(root.ids.host.text)

<PuzzleChooserPopup>:
    size_hint: (0.6, 1.0)
    title: _("Load Puzzle")
    ThemedBoxLayout:
        padding: dp(0)
        spacing: dp(0)
        canvas.before:
            Color:
                rgba: app.theme.bg2
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: 'vertical'
        ThemedBoxLayout:  # top section
            padding: dp(0)
            spacing: dp(0)
            size_hint_y: 0.9
            ThemedBoxLayout:
                orientation: 'vertical'
                CheckBoxLabel:
                    text: _("Filter the puzzles by level:")
                SingleRowLayout:
                    FiltersCheckBox:
                        name: "Level0"
                    CheckBoxLabel:
                        text: _("Level 0")
                SingleRowLayout:
                    FiltersCheckBox:
                        name: "Level1"
                    CheckBoxLabel:
                        text: _("Level 1")
                SingleRowLayout:
                    FiltersCheckBox:
                        name: "Level2"
                    CheckBoxLabel:
                        text: _("Level 2")
                SingleRowLayout:
                    FiltersCheckBox:
                        name: "Level3"
                    CheckBoxLabel:
                        text: _("Level 3")
                SingleRowLayout:
                    FiltersCheckBox:
                        name: "Level4"
                    CheckBoxLabel:
                        text: _("Level 4")
                SingleRowLayout:
                    FiltersCheckBox:
                        name: "Level5"
                    CheckBoxLabel:
                        text: _("Level 5")
                SingleRowLayout:
                    FiltersCheckBox:
                        name: "Level6"
                    CheckBoxLabel:
                        text: _("Level 6")
                Widget: # spacer to keep other widgets at the top
            VSeparator:
            PuzzlesRecView:
                id: puzzles_view
        HSeparator:
        ActionPopupButtons:  # cancel/okay
            okay_text: _("Load")
            on_cancel: root.on_cancel()
            on_okay: root.on_load()


<PuzzleCompletePopup>:
    title: _("Puzzle complete!")
    size_hint_y: 0.5
    ThemedBoxLayout:
        orientation: "vertical"
        ThemedLabel:
            text: _("Congratulations, you have completed the puzzle!")
        ActionPopupButtons:  # cancel/okay
            on_cancel: root.on_cancel()
            on_okay: root.on_okay()

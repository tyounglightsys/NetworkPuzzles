<ThemedLabel>:
    canvas.before:
        Color:
            rgba: [*app.theme.bg2[:3], 0.9]
        Rectangle:
            pos: self.pos
            size: self.size
    color: app.theme.fg3
    padding: [dp(5), dp(5), dp(5), dp(5)]
    halign: "left"
    valign: "center"
    font_size: sp(16)

<CheckBoxLabel>:
    valign: "center"
    text_size: self.size

<EditDeviceLabel@ThemedLabel>:
    font_size: sp(20)

<DeviceLabel>:
    size_hint: (None, None)
    halign: "center"

<InfoLabel>:
    border_width: dp(3)
    border_color: app.theme.fg3
    valign: "top"
    markup: True

<SelectableLabel>:
    canvas.before:
        Color:
            rgba: app.theme.bg1 if self.selected else app.theme.bg3
        Rectangle:
            pos: self.pos
            size: self.size
    valign: 'center'
    text_size: self.size
    padding: dp(3)

<TerminalLabel>:
    background_color: app.theme.bg3
    foreground_color: app.theme.fg3
    halign: 'left'
    valign: 'bottom'
    font_name: 'RobotoMono-Regular'
    font_size: sp(12)
    text_size: self.size
    readonly: True
    do_wrap: False

<ToolTip>:
    size_hint: (None, None)
    text_size: (None, None)

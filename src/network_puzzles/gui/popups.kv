<ThemedPopup>:
    title_size: app.BUTTON_FONT_SIZE
    size_hint: (0.5, 0.75)
    on_open: self._update_sep_color()


<CommandPopup>:
    title: _("Input command:")
    size_hint_y: 0.25
    ThemedBoxLayout:
        orientation: "vertical"
        ValueInput:
            id: text_input
            on_text_validate: root.on_okay()
        ActionPopupButtons:  # cancel/okay
            on_cancel: root.on_cancel()
            on_okay: root.on_okay()


<ExceptionPopup>:
    title: _("Error")
    ThemedBoxLayout:
        orientation: 'vertical'
        ScrollView:
            size_hint_y: 0.8
            bar_width: dp(5)
            scroll_type: ['bars', 'content']
            do_scroll_x: True
            do_scroll_y: True
            effect_cls: 'ScrollEffect'
            TerminalLabel:
                id: exception
                padding: dp(3)
                size_hint: (None, None)
                height: self.line_height * len(self.text.split('\n'))
                width: self._get_row_width(self.get_max_row(self.text))
                text_size: (self.width, None)
        HSeparator:
        PopupButton:
            pos_hint: {"center_x": 0.5}
            size_hint_x: None
            size_hint_max_x: None
            size_hint_y: 0.2
            text: _("Quit")
            on_release: app.stop()


<PuzzleChooserPopup>:
    size_hint: (0.5, 1.0)
    title: _("Load Puzzle")
    ThemedBoxLayout:
        padding: dp(0)
        spacing: dp(0)
        canvas.before:
            Color:
                rgba: app.theme.bg2
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: 'vertical'
        ThemedBoxLayout:  # top section
            padding: dp(0)
            spacing: dp(0)
            size_hint_y: 0.9
            ThemedBoxLayout:
                orientation: 'vertical'
                CheckBoxLabel:
                    size_hint_y: 0.1
                    text: _("Filter the puzzles by level:")
                SingleRowLayout:
                    FiltersCheckBox:
                        name: 'Level0'
                    CheckBoxLabel:
                        size_hint_x: 0.85
                        text: _("Level 0")
                SingleRowLayout:
                    FiltersCheckBox:
                        name: 'Level1'
                    CheckBoxLabel:
                        size_hint_x: 0.85
                        text: _("Level 1")
                SingleRowLayout:
                    FiltersCheckBox:
                        name: 'Level2'
                    CheckBoxLabel:
                        size_hint_x: 0.85
                        text: _("Level 2")
                SingleRowLayout:
                    FiltersCheckBox:
                        name: 'Level3'
                    CheckBoxLabel:
                        size_hint_x: 0.85
                        text: _("Level 3")
                SingleRowLayout:
                    FiltersCheckBox:
                        name: 'Level4'
                    CheckBoxLabel:
                        size_hint_x: 0.85
                        text: _("Level 4")
                SingleRowLayout:
                    FiltersCheckBox:
                        name: 'Level5'
                    CheckBoxLabel:
                        size_hint_x: 0.85
                        text: _("Level 5")
                SingleRowLayout:
                    FiltersCheckBox:
                        name: 'Level6'
                    CheckBoxLabel:
                        size_hint_x: 0.85
                        text: _("Level 6")
                Widget:
            VSeparator:
            PuzzlesRecView:
                id: puzzles_view
        HSeparator:
        ActionPopupButtons:  # cancel/okay
            okay_text: _("Load")
            on_cancel: root.on_cancel()
            on_okay: root.on_load()


<PuzzleCompletePopup@ActionPopup>:
    title: _("Puzzle complete!")
    size_hint_y: 0.5
    ThemedBoxLayout:
        orientation: "vertical"
        ThemedLabel:
            text: _("Congratulations, you have completed the puzzle!")
        ActionPopupButtons:  # cancel/okay
            on_cancel: root.on_cancel()
            on_okay: root.on_okay()

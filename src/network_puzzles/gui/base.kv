<Device>:
    orientation: 'vertical'
    spacing: 0  # TODO: this is not applied
    size_hint: (0.08, 0.20)
    size_hint_max: (dp(85), dp(120))
    drag_rectangle: (self.x, self.y, self.width, self.height)
    DeviceButton:
        _on_press: root.on_press
    DeviceLabel:
        text: root.hostname
        pos_hint: {'center_x': 0.5}

<ThemedCheckBox>:
    canvas.before:
        Color:
            rgba: app.theme.bg2
        Rectangle:
            pos: self.pos
            size: self.size
    color: app.theme.fg2
    font_size: sp(12)
    on_active: self.on_activate()

<FiltersCheckBox@ThemedCheckBox>:
    size_hint_x: 0.15


<Packet>
    canvas:
        Color:
            rgba: app.theme.detail
        Ellipse:
            pos: self.pos
            size: app.PACKET_DIMS


<Separator@Widget>:
    canvas:
        Color:
            rgba: app.theme.detail
        Rectangle:
            pos: self.pos
            size: self.size

<HSeparator@Separator>:
    size_hint_y: None
    height: dp(2)

<VSeparator@Separator>:
    size_hint_x: None
    width: dp(2)


<HelpHighlight>
    size_hint: (None, None)
    canvas.before:
        Color:
            rgba: (1, 0, 0, 0.5)
        RoundedRectangle:
            pos: (self.x - dp(5), self.y - dp(5))
            size: (self.width + dp(10), self.height + dp(10))
            radius: [dp(10)]

<HelpSlider>
    orientation: 'horizontal'
    canvas.after:
        Color:
            rgba: app.theme.detail
        Ellipse:
            pos: (root.value_pos[0] - dp(18), root.center_y - dp(18))
            size: (dp(36), dp(36))
    cursor_image: ''
    cursor_size: (0, 0)
    value_track: True
    value_track_color: app.theme.detail
    min: 0
    max: 3
    step: 1

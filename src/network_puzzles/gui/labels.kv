<ThemedLabel>:
    canvas.before:
        Color:
            rgba: [*app.theme.bg2[:3], 0.9]
        Rectangle:
            pos: self.pos
            size: self.size
    color: app.theme.fg3
    halign: 'left'
    valign: 'top'
    font_size: sp(16)
    text_size: (self.width - dp(10), self.height - dp(10))

<CheckBoxLabel@ThemedLabel>:
    valign: 'center'

<EditDeviceLabel@ThemedLabel>:
    font_size: sp(20)

<DeviceLabel>:
    size_hint_x: None
    size_hint_y: 0.33
    halign: 'center'

<SelectableLabel>:
    canvas.before:
        Color:
            rgba: app.theme.bg1 if self.selected else app.theme.bg3
        Rectangle:
            pos: self.pos
            size: self.size
    valign: 'center'

<TerminalLabel>:
    background_color: app.theme.bg3
    foreground_color: app.theme.fg3
    halign: 'left'
    valign: 'bottom'
    font_name: 'RobotoMono-Regular'
    font_size: sp(12)
    text_size: self.size
    readonly: True
    do_wrap: False

<ToolTip>:
    size_hint: (None, None)
    text_size: (None, None)

<AppPopup>:
    title_size: app.BUTTON_FONT_SIZE
    size_hint: (1/2, 1/2)

<ExceptionPopup>:
    title: _("Error")
    ThemedBoxLayout:
        orientation: 'vertical'
        ScrollView:
            size_hint_y: 0.8
            bar_width: dp(5)
            scroll_type: ['bars', 'content']
            do_scroll_x: True
            do_scroll_y: True
            effect_cls: 'ScrollEffect'
            TerminalLabel:
                id: exception
                padding: dp(3)
                size_hint_x: None
                size_hint_y: None
                height: self.line_height * len(self.text.split('\n'))
                width: self._get_row_width(self.get_max_row(self.text))
                text_size: (self.width, None)
        HSeparator:
        PopupButton:
            pos_hint: {"center_x": 0.5}
            size_hint_x: None
            size_hint_max_x: None
            size_hint_y: 0.2
            text: _("Quit")
            on_release: app.stop()

#:kivy 2.0
#:import _ network_puzzles._

ThemedBoxLayout:
    ThemedBoxLayout:  # left panel
        size_hint_x: 1/4
        orientation: 'vertical'
        padding: dp(5)
        ThemedBoxLayout:  # menu buttons group
            spacing: dp(5)
            size_hint_y: 0.1
            size_hint_max_y: dp(app.BUTTON_MAX_H + 10)  # 10px more for padding
            size_hint_x: None
            width: self.parent.width
            padding: dp(5)
            AppButton:
                text: "+"
                on_press: app.on_puzzle_chooser()
            AppButton:
                text: "[Save]"
                on_press: app.on_save()
            AppButton:
                text: "\u2b6f"
                on_press: app.setup_puzzle()
            AppButton:
                text: "[Lang]"
                on_press: app.on_language()
            AppButton:
                id: test
                text: "[Test]"
                on_press: app._test()
            AppButton:
                id: help
                pos_hint: {'right': 1}
                text: _("?")
                on_press: app.on_help()
        HSeparator:
        ThemedLabel:  # puzzle information
            id: info
            size_hint_y: 0.72
            border_width: dp(3)
            border_color: app.DARKEST_COLOR

    VSeparator:
    ThemedBoxLayout:  # right panel
        orientation: 'vertical'
        size_hint_x: 3/4
        padding: dp(3)
        PuzzleLayout:
            id: layout
            size_hint_y: 0.90
        TerminalLabel:
            id: terminal
            size_hint_y: 0.10
            max_lines: 6


<ThemedBoxLayout@BoxLayout>:
    padding: dp(5)
    spacing: dp(3)

<ThemedGridLayout@GridLayout>:
    padding: dp(5)
    spacing: dp(3)


<ThemedButton>:
    background_normal: ''  # sets initial background to white
    background_color: (1, 1, 1, 0)  # makes it transparent
    size_hint_y: 1
    #height: dp(app.BUTTON_MAX_H)
    size_hint_max_y: dp(app.BUTTON_MAX_H)
    size_hint_min_y: dp(app.BUTTON_MAX_H - 4)
    color: app.DARKEST_COLOR
    font_size: dp(app.BUTTON_FONT_SIZE)
    bold: True
    canvas.before:
        Color:
            rgba: app.LIGHT_COLOR if self.state == 'normal' else app.LIGHTEST_COLOR
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [dp(10)]

<AppButton>:
    font_size: dp(app.BUTTON_FONT_SIZE - 2)
    size_hint_x: None  # to set explicit width
    width: self.height

<CommandButton>:
    size_hint_y: None
    height: dp(app.BUTTON_MAX_H)

<PopupButton@ThemedButton>:


<ThemedLabel>:
    canvas.before:
        Color:
            rgba: app.LIGHTER_COLOR
        Rectangle:
            pos: self.pos
            size: self.size
    color: app.DARKEST_COLOR
    halign: 'left'
    valign: 'top'
    font_size: sp(16)
    text_size: (self.width - dp(10), self.height - dp(10))

<CheckBoxLabel@ThemedLabel>:
    valign: 'center'

<SelectableLabel>:
    canvas.before:
        Color:
            rgba: app.LIGHT_COLOR if self.selected else app.LIGHTEST_COLOR
        Rectangle:
            pos: self.pos
            size: self.size
    valign: 'center'

<TerminalLabel>:
    background_color: app.LIGHTEST_COLOR
    foreground_color: app.DARKEST_COLOR
    halign: 'left'
    valign: 'bottom'
    font_name: 'RobotoMono-Regular'
    font_size: sp(12)
    text_size: self.size
    readonly: True
    do_wrap: False


<ThemedCheckBox>:
    canvas.before:
        Color:
            rgba: app.LIGHTER_COLOR
        Rectangle:
            pos: self.pos
            size: self.size
    color: app.DARKER_COLOR
    font_size: sp(12)
    on_active: self.on_activate()

<FiltersCheckBox@ThemedCheckBox>:
    size_hint_x: 0.15

<Separator@Widget>:
    canvas:
        Color:
            rgba: app.MEDIUM_COLOR
        Rectangle:
            pos: self.pos
            size: self.size

<HSeparator@Separator>:
    size_hint_y: None
    height: dp(1)

<VSeparator@Separator>:
    size_hint_x: None
    width: dp(1)


<AppPopup>:
    title_size: dp(app.BUTTON_FONT_SIZE)
    size_hint: (1/2, 3/4)

<PuzzleChooserPopup>:
    title: _("Load Puzzle")
    size_hint_x: 1/3
    ThemedBoxLayout:
        canvas.before:
            Color:
                rgba: app.LIGHTER_COLOR
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: 'vertical'
        padding: dp(5)
        ThemedBoxLayout:  # top section
            size_hint_y: 0.9
            ThemedBoxLayout:
                orientation: 'vertical'
                CheckBoxLabel:
                    text: _("Filter the puzzles by level:")
                ThemedBoxLayout:
                    FiltersCheckBox:
                        name: 'Level0'
                    CheckBoxLabel:
                        size_hint_x: 0.85
                        text: _("Level 0")
                ThemedBoxLayout:
                    FiltersCheckBox:
                        name: 'Level1'
                    CheckBoxLabel:
                        size_hint_x: 0.85
                        text: _("Level 1")
                ThemedBoxLayout:
                    FiltersCheckBox:
                        name: 'Level2'
                    CheckBoxLabel:
                        size_hint_x: 0.85
                        text: _("Level 2")
                ThemedBoxLayout:
                    FiltersCheckBox:
                        name: 'Level3'
                    CheckBoxLabel:
                        size_hint_x: 0.85
                        text: _("Level 3")
                ThemedBoxLayout:
                    FiltersCheckBox:
                        name: 'Level4'
                    CheckBoxLabel:
                        size_hint_x: 0.85
                        text: _("Level 4")
                ThemedBoxLayout:
                    FiltersCheckBox:
                        name: 'Level5'
                    CheckBoxLabel:
                        size_hint_x: 0.85
                        text: _("Level 5")
                ThemedBoxLayout:
                    FiltersCheckBox:
                        name: 'Level6'
                    CheckBoxLabel:
                        size_hint_x: 0.85
                        text: _("Level 6")
            VSeparator:
            PuzzlesRecView:
                id: puzzles_view
        HSeparator:
        ThemedBoxLayout:  # bottom buttons
            padding: dp(5)
            spacing: dp(5)
            size_hint_y: 0.1
            size_hint_max_y: dp(app.BUTTON_MAX_H)
            PopupButton:
                text: _("Cancel")
                on_press: root.on_cancel()
            PopupButton:
                text: _("Load")
                on_press: root.on_load()
        

<ExceptionPopup>:
    title: _("Error")
    ThemedBoxLayout:
        orientation: 'vertical'
        ScrollView:
            size_hint_y: 0.8
            bar_width: dp(5)
            scroll_type: ['bars', 'content']
            do_scroll_x: True
            do_scroll_y: True
            effect_cls: 'ScrollEffect'
            TerminalLabel:
                id: exception
                padding: dp(3)
                size_hint_x: None
                size_hint_y: None
                height: self.line_height * len(self.text.split('\n'))
                width: self._get_row_width(self.get_max_row(self.text))
                text_size: (self.width, None)
        HSeparator:
        PopupButton:
            pos_hint: {"center_x": 0.5}
            size_hint_x: None
            size_hint_max_x: None
            size_hint_y: 0.2
            text: _("Quit")
            on_release: app.stop()

<ActionsPopup>
    size_hint: (1/4, None)


<SelectableRecycleBoxLayout>
    padding: dp(5)


<PuzzlesRecView>:
    viewclass: 'SelectableLabel'
    SelectableRecycleBoxLayout:
        orientation: 'vertical'
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height

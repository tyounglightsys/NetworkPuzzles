<ThemedCheckBox>:
    canvas.before:
        Color:
            rgba: app.theme.bg2
        Rectangle:
            pos: self.pos
            size: self.size
    color: app.theme.fg2
    font_size: sp(12)
    on_active: self.on_activate()

<FiltersCheckBox@ThemedCheckBox>:
    size_hint_x: 0.15


<Packet>
    canvas:
        Color:
            rgba: app.theme.detail
        Ellipse:
            pos: self.pos
            size: app.PACKET_DIMS


<Separator@Widget>:
    canvas:
        Color:
            rgba: app.theme.detail
        Rectangle:
            pos: self.pos
            size: self.size

<HSeparator@Separator>:
    size_hint_y: None
    height: dp(2)

<VSeparator@Separator>:
    size_hint_x: None
    width: dp(2)


<HelpSlider>
    id: help_slider
    orientation: 'horizontal'
    canvas.after:
        Color:
            rgba: app.theme.detail
        Ellipse:
            pos: (root.value_pos[0] - dp(18), root.center_y - dp(18))
            size: (dp(36), dp(36))
    cursor_image: ''
    cursor_size: (0, 0)
    value_track: True
    value_track_color: app.theme.detail
    min: 1
    max: 4
    step: 1
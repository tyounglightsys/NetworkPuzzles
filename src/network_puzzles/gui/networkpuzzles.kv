#:kivy 2.0
#:import _ network_puzzles._
#:import session network_puzzles.session
#:include network_puzzles/gui/base.kv
#:include network_puzzles/gui/buttons.kv
#:include network_puzzles/gui/labels.kv
#:include network_puzzles/gui/layouts.kv
#:include network_puzzles/gui/popups.kv


ThemedBoxLayout:
    padding: dp(0)
    spacing: dp(0)
    ThemedBoxLayout:  # left panel
        id: left_panel
        size_hint_x: None
        orientation: 'vertical'
        #width: self.children[0].width
        padding: dp(0)
        ThemedBoxLayout:  # menu buttons group
            id: menu_area
            spacing: dp(5)
            size_hint_y: 0.1
            size_hint_max_y: dp(app.BUTTON_MAX_H + 10)  # 10px more for padding
            size_hint_x: None
            width: self.parent.width
            padding: dp(5)
            AppButton:
                text: "+"
                on_press: app.on_puzzle_chooser()
            AppButton:  # save
                text: "\u2193"
                on_press: app.on_save()
            AppButton:  # restart
                text: "\u21ba"
                on_press: app.setup_puzzle()
            AppButton:  # undo
                text: "\u2190"
                on_press: print("undo")
            AppButton:  # redo
                text: "\u2192"
                on_press: print("redo")
            AppButton:  # lang
                id: lang
                text: session.lang
                on_press: app.on_language()
            AppButton:  # help
                pos_hint: {'right': 1}
                text: "?"
                on_press: app.on_help()
        HSeparator:
        ThemedBoxLayout:
            size_hint_y: 0.05
            orientation: 'horizontal'
            ThemedLabel:
                size_hint_x: 0.33
                text: _("Help level:")
            HelpSlider:
                id: help_slider
                size_hint_x: 0.67
        ThemedLabel:  # puzzle information
            id: info
            size_hint_y: 0.67
            border_width: dp(3)
            border_color: app.theme.fg3

    VSeparator:
    ThemedBoxLayout:  # right panel
        orientation: 'vertical'
        size_hint_x: 3/4
        padding: dp(0)
        PuzzleLayout:
            id: layout
            size_hint_y: 0.90
        TerminalLabel:
            id: terminal
            size_hint_y: 0.10
            max_lines: 6


<PuzzlesRecView>:
    viewclass: 'SelectableLabel'
    bar_color: app.theme.detail
    bar_inactive_color: self.bar_color
    bar_width: dp(3)
    SelectableRecycleBoxLayout:
        orientation: 'vertical'
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height

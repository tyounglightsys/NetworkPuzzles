#:kivy 2.0
#:import _ network_puzzles._
#:import session network_puzzles.session
# Order of "include" directives seems to matter.
#:include network_puzzles/gui/labels.kv
#:include network_puzzles/gui/layouts.kv
#:include network_puzzles/gui/base.kv
#:include network_puzzles/gui/popups.kv
#:include network_puzzles/gui/buttons.kv
#:include network_puzzles/gui/device.kv
#:include network_puzzles/gui/link.kv


ThemedBoxLayout:
    padding: dp(0)
    spacing: dp(0)
    ThemedBoxLayout:  # left panel
        id: left_panel
        size_hint_x: None
        orientation: 'vertical'
        padding: dp(0)
        MenuLayout:  # menu buttons group
            id: menu
            spacing: dp(5)
            size_hint_y: 0.1
            size_hint_max_y: app.BUTTON_MAX_H + dp(10)  # 10px more for padding
            size_hint_x: None
            width: self.parent.width
            padding: dp(5)
            AppButton:
                info: _("choose puzzle")
                text: "+"
                pos: self.get_pos()
                on_press: app.on_puzzle_chooser()
            AppButton:  # save
                info: _("save puzzle")
                text: "\u2193"
                pos: self.get_pos()
                on_press: app.on_save()
            AppButton:  # restart
                info: _("restart puzzle")
                text: "\u21ba"
                pos: self.get_pos()
                on_press: app.setup_puzzle()
            AppButton:  # undo
                id: undo
                info: _("undo")
                text: "\u2190"
                pos: self.get_pos()
                on_press: app.on_undo()
            AppButton:  # redo
                id: redo
                info: _("redo")
                text: "\u2192"
                pos: self.get_pos()
                on_press: app.on_redo()
            AppButton:  # lang
                id: lang
                info: _("choose language")
                text: session.lang
                pos: self.get_pos()
                on_press: app.on_language()
            AppButton:  # help
                info: _("help")
                text: "?"
                pos: self.get_pos()
                on_press: app.on_help()
        HSeparator:
        ThemedBoxLayout:
            size_hint_y: 0.05
            orientation: 'horizontal'
            ThemedLabel:
                size_hint_x: 0.33
                text: _("Help level:")
            HelpSlider:
                id: help_slider
                size_hint_x: 0.67
        ThemedLabel:  # puzzle information
            id: info
            size_hint_y: 0.67
            border_width: dp(3)
            border_color: app.theme.fg3

    VSeparator:
    ThemedBoxLayout:  # right panel
        orientation: 'vertical'
        size_hint_x: 3/4
        padding: dp(0)
        PuzzleLayout:
            id: layout
            size_hint_y: 0.90
        TerminalLabel:
            id: terminal
            size_hint_y: 0.10
            max_lines: 6


<PuzzleChooserPopup>:
    size_hint: (1/3, 3/4)
    title: _("Load Puzzle")
    ThemedBoxLayout:
        padding: dp(0)
        spacing: dp(0)
        canvas.before:
            Color:
                rgba: app.theme.bg2
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: 'vertical'
        ThemedBoxLayout:  # top section
            padding: dp(0)
            spacing: dp(0)
            size_hint_y: 0.9
            ThemedBoxLayout:
                orientation: 'vertical'
                CheckBoxLabel:
                    text: _("Filter the puzzles by level:")
                ThemedBoxLayout:
                    FiltersCheckBox:
                        name: 'Level0'
                    CheckBoxLabel:
                        size_hint_x: 0.85
                        text: _("Level 0")
                ThemedBoxLayout:
                    FiltersCheckBox:
                        name: 'Level1'
                    CheckBoxLabel:
                        size_hint_x: 0.85
                        text: _("Level 1")
                ThemedBoxLayout:
                    FiltersCheckBox:
                        name: 'Level2'
                    CheckBoxLabel:
                        size_hint_x: 0.85
                        text: _("Level 2")
                ThemedBoxLayout:
                    FiltersCheckBox:
                        name: 'Level3'
                    CheckBoxLabel:
                        size_hint_x: 0.85
                        text: _("Level 3")
                ThemedBoxLayout:
                    FiltersCheckBox:
                        name: 'Level4'
                    CheckBoxLabel:
                        size_hint_x: 0.85
                        text: _("Level 4")
                ThemedBoxLayout:
                    FiltersCheckBox:
                        name: 'Level5'
                    CheckBoxLabel:
                        size_hint_x: 0.85
                        text: _("Level 5")
                ThemedBoxLayout:
                    FiltersCheckBox:
                        name: 'Level6'
                    CheckBoxLabel:
                        size_hint_x: 0.85
                        text: _("Level 6")
            VSeparator:
            PuzzlesRecView:
                id: puzzles_view
        HSeparator:
        ThemedBoxLayout:  # bottom buttons
            padding: dp(5)
            spacing: dp(5)
            size_hint_y: 0.1
            size_hint_max_y: app.BUTTON_MAX_H
            PopupButton:
                text: _("Cancel")
                on_press: root.on_cancel()
            PopupButton:
                text: _("Load")
                on_press: root.on_load()

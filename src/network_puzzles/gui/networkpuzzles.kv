#:kivy 2.0
#:import _ network_puzzles._
#:import session network_puzzles.session
# Order of "include" directives seems to matter.
#:include network_puzzles/gui/popups.kv
#:include network_puzzles/gui/base.kv
#:include network_puzzles/gui/inputs.kv
#:include network_puzzles/gui/labels.kv
#:include network_puzzles/gui/buttons.kv
#:include network_puzzles/gui/layouts.kv
#:include network_puzzles/gui/devices.kv
#:include network_puzzles/gui/links.kv
#:include network_puzzles/gui/packets.kv


ThemedBoxLayout:
    padding: dp(0)
    spacing: dp(0)
    ThemedBoxLayout:  # left panel
        id: left_panel
        size_hint_x: None
        orientation: 'vertical'
        padding: dp(0)
        MenuLayout:  # menu buttons group
            id: menu
            spacing: dp(5)
            size_hint_y: 0.1
            size_hint_max_y: app.BUTTON_MAX_H + dp(10)  # 10px more for padding
            size_hint_x: None
            width: self.parent.width
            padding: dp(5)
            AppButton:
                info: _("choose puzzle")
                text: "+"
                pos: self.get_pos()
                on_release: app.on_puzzle_chooser()
            #AppButton:  # save
            #    info: _("save puzzle")
            #    text: "\u2193"
            #    pos: self.get_pos()
            #    on_release: app.on_save()
            AppButton:  # restart
                info: _("restart puzzle")
                text: "\u21ba"
                pos: self.get_pos()
                on_release: app.setup_puzzle()
            AppButton:  # undo
                id: undo
                info: _("undo")
                text: "\u2190"
                pos: self.get_pos()
                on_release: app.on_undo()
            AppButton:  # redo
                id: redo
                info: _("redo")
                text: "\u2192"
                pos: self.get_pos()
                on_release: app.on_redo()
            #AppButton:  # lang
            #    id: lang
            #    info: _("choose language")
            #    text: session.lang
            #    pos: self.get_pos()
            #    on_release: app.on_language()
            AppButton:  # help
                info: _("help")
                text: "?"
                pos: self.get_pos()
                on_release: app.on_help()
        HSeparator:
        ThemedBoxLayout:
            size_hint_y: 0.15
            orientation: 'vertical'
            InfoLabel:
                text: _("Help level:")
                text_size: self.size
            HelpSlider:
                id: help_slider
        ThemedScrollView:
            size_hint_y: 0.75
            InfoLabel:  # puzzle information
                id: info
                size_hint_y: None
                text_size: (self.parent.parent.width, None)
                height: self.texture_size[1]

    VSeparator:
    ThemedBoxLayout:  # right panel
        orientation: 'vertical'
        size_hint_x: 0.75
        padding: dp(0)
        PuzzleLayout:
            id: layout
            size_hint_y: None
            height: self.get_height()
        TerminalLabel:
            id: terminal
            size_hint_y: None
            height: self.line_height * 7

#:kivy 2.0
#:import _ network_puzzles._

ThemedBoxLayout:
    ThemedBoxLayout:
        size_hint_x: 1/3
        orientation: 'vertical'
        ThemedBoxLayout:  # menu buttons group
            size_hint_y: 0.1
            width: self.width
            padding: dp(5)
            AppButton:
                id: menu
                text: _("Menu")
                on_press: app.on_menu()
            AppButton:
                text: _("Puzzle")
                on_press: app.on_puzzle_chooser()
            AppButton:
                id: test
                text: _("Test")
                on_press: app._test()
            AppButton:
                text: "[Error]"
                on_press: raise Exception
            AppButton:
                id: help
                pos_hint: {'right': 1, 'x': 1}
                text: _("?")
                on_press: app.on_help()
        HSeparator:
        ThemedLabel:  # puzzle information
            id: info
            size_hint_y: 0.72
            border_width: dp(3)
            border_color: app.DARKEST_COLOR

    VSeparator:
    ThemedBoxLayout:
        orientation: 'vertical'
        size_hint_x: 2/3
        PuzzleLayout:
            id: layout
            size_hint_y: 0.90
        TerminalLabel:
            id: terminal
            size_hint_y: 0.10
            #text: f"Terminal output...\nline 2...\nline 3...\nline 4...\nline 5...\nline 6..."
            max_lines: 6


<ThemedBoxLayout@BoxLayout>:
    spacing: dp(5)
    canvas:
        Color:
            rgba: app.LIGHTER_COLOR
        Rectangle: 
            pos: self.pos
            size: self.size

<PuzzleLayout>:
    canvas:
        Color:
            rgba: app.LIGHTEST_COLOR
        Rectangle: 
            pos: self.pos
            size: self.size

<ThemedButton@Button>:
    background_normal: ''  # sets initial background to white
    background_color: (1, 1, 1, 0)  # makes it transparent
    size_hint_y: 1
    size_hint_max_y: dp(50)
    color: app.DARKEST_COLOR
    bold: True
    canvas.before:
        Color:
            rgba: app.LIGHT_COLOR if self.state == 'normal' else app.LIGHTEST_COLOR
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [dp(10)]

<AppButton@ThemedButton>:
    size_hint_x: None
    width: self.height

<PopupButton@ThemedButton>:
    font_size: dp(18)


<ThemedLabel>:
    #padding: dp(10)
    canvas.before:
        Color:
            rgba: app.LIGHTER_COLOR
        Rectangle:
            pos: self.pos
            size: self.size
    color: app.DARKEST_COLOR
    halign: 'left'
    valign: 'top'
    font_size: sp(16)
    text_size: self.size

<CheckBoxLabel@ThemedLabel>:
    valign: 'center'

<SelectableLabel>:
    canvas.before:
        Color:
            rgba: app.LIGHTER_COLOR if self.selected else app.LIGHTEST_COLOR
        Rectangle:
            pos: self.pos
            size: self.size

<TerminalLabel@ThemedLabel>:
    canvas.before:
        Color:
            rgba: app.LIGHTEST_COLOR
        Rectangle:
            pos: self.pos
            size: self.size
    color: app.DARKEST_COLOR
    font_name: 'RobotoMono-Regular'
    valign: 'bottom'
    font_size: sp(12)


<ThemedCheckBox>:
    canvas.before:
        Color:
            rgba: app.LIGHTER_COLOR
        Rectangle:
            pos: self.pos
            size: self.size
    color: app.DARKER_COLOR
    font_size: sp(12)
    on_active: self.on_activate()

<FiltersCheckBox@ThemedCheckBox>:
    size_hint_x: 0.15

<Separator@Widget>:
    canvas:
        Color:
            rgba: app.MEDIUM_COLOR
        Rectangle:
            pos: self.pos
            size: self.size

<HSeparator@Separator>:
    size_hint_y: None
    height: dp(1)

<VSeparator@Separator>:
    size_hint_x: None
    width: dp(1)


<AppPopup>:
    title_size: dp(18)
    size_hint: (1/2, 3/4)

<PuzzleChooserPopup>:
    title: _("Load Puzzle")
    size_hint_x: 1/3
    ThemedBoxLayout:
        canvas.before:
            Color:
                rgba: app.LIGHTER_COLOR
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: 'vertical'
        padding: [dp(5), dp(5), dp(5), dp(5)]
        ThemedBoxLayout:  # top section
            size_hint_y: 0.9
            ThemedBoxLayout:
                orientation: 'vertical'
                CheckBoxLabel:
                    text: _("Filter the puzzles by level:")
                ThemedBoxLayout:
                    FiltersCheckBox:
                        name: 'level0'
                    CheckBoxLabel:
                        size_hint_x: 0.85
                        text: _("Level 0")
                ThemedBoxLayout:
                    FiltersCheckBox:
                        name: 'level1'
                    CheckBoxLabel:
                        size_hint_x: 0.85
                        text: _("Level 1")
                ThemedBoxLayout:
                    FiltersCheckBox:
                        name: 'level2'
                    CheckBoxLabel:
                        size_hint_x: 0.85
                        text: _("Level 2")
                ThemedBoxLayout:
                    FiltersCheckBox:
                        name: 'level3'
                    CheckBoxLabel:
                        size_hint_x: 0.85
                        text: _("Level 3")
                ThemedBoxLayout:
                    FiltersCheckBox:
                        name: 'level4'
                    CheckBoxLabel:
                        size_hint_x: 0.85
                        text: _("Level 4")
                ThemedBoxLayout:
                    FiltersCheckBox:
                        name: 'level5'
                    CheckBoxLabel:
                        size_hint_x: 0.85
                        text: _("Level 5")
                ThemedBoxLayout:
                    FiltersCheckBox:
                        name: 'level6'
                    CheckBoxLabel:
                        size_hint_x: 0.85
                        text: _("Level 6")
            VSeparator:
            PuzzlesRecView:
        HSeparator:
        ThemedBoxLayout:  # bottom buttons
            size_hint_y: 0.1
            size_hint_max_y: dp(50)
            PopupButton:
                text: _("Cancel")
                on_press: root.on_cancel()
            PopupButton:
                text: _("Load")
                on_press: root.on_load()
        

<ExceptionPopup>:
    title: _("Error")
    ThemedBoxLayout:
        orientation: 'vertical'
        ScrollView:
            size_hint_y: 0.8
            do_scroll_x: False
            do_scroll_y: True
            TerminalLabel:
                id: exception
                padding: dp(3)
                size_hint_y: None
                height: self.texture_size[1]
                font_name: 'RobotoMono-Regular'
                font_size: dp(12)
                text_size: (self.width, None)
                size: self.texture_size
        HSeparator:
        PopupButton:
            pos_hint: {"center_x": 0.5}
            size_hint_x: None
            size_hint_max_x: None
            size_hint_y: 0.2
            text: _("Quit")
            on_release: app.stop()


<PuzzlesRecView>:
    viewclass: 'SelectableLabel'
    SelectableRecycleBoxLayout:
        orientation: 'vertical'
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height

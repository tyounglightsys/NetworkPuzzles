#:set d1 dp(8)
#:set d2 dp(12)

<ThemedCheckBox>:
    canvas.before:
        Color:
            rgba: app.theme.bg2
        Rectangle:
            pos: self.pos
            size: self.size
    color: app.theme.fg2
    font_size: sp(12)
    on_active: self.on_activate()

<FiltersCheckBox@ThemedCheckBox>:
    size_hint_x: 0.15


<Separator@Widget>:
    canvas:
        Color:
            rgba: app.theme.detail
        Rectangle:
            pos: self.pos
            size: self.size

<HSeparator@Separator>:
    size_hint_y: None
    height: dp(2)

<VSeparator@Separator>:
    size_hint_x: None
    width: dp(2)


<ValueInput@TextInput>:
    size_hint_y: 1
    size_hint_max_y: self.padding[1] + self.padding[3] + app.BUTTON_FONT_SIZE
    multiline: False
    text_validate_unfocus: True
    write_tab: False


<HelpHighlight>:
    size_hint: (None, None)
    size: (self.base.size[0] + dp(6), self.base.size[1] + dp(6))
    center: self.base.center
    canvas:
        Color:
            rgba: (1, 0, 0, 0.5)
        RoundedRectangle:
            pos: (self.x - dp(3), self.y - dp(3))
            size: self.size
            radius: [dp(10)]

<LockEmblem>:
    size_hint: (None, None)
    size: (d2, d2)
    # Place just inside the upper-right corder of base device's button.
    center: (self.base.button.x + self.base.button.width - d1, self.base.button.y + self.base.button.height - d2)
    canvas:
        Color:
            rgb: (0.6, 0.6, 0.6)
        Ellipse:
            pos: (self.x + self.width / 2 - d1 / 2, self.y + self.height - d2 / 2)
            size: (d1, d2)
        Color:
            rgb: (1, 0.8, 0.2)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [d2 / 4]

<HelpSlider>:
    orientation: 'horizontal'
    canvas.after:
        Color:
            rgba: app.theme.detail
        Ellipse:
            size: (dp(24), dp(24))
            pos: (root.value_pos[0] - dp(12), root.center_y - dp(12))
    cursor_image: ''
    cursor_size: (0, 0)
    value_track: True
    value_track_color: app.theme.detail
    min: 0
    max: 3
    step: 1

<AppRecView>:
    viewclass: 'SelectableLabel'
    bar_color: app.theme.detail
    bar_inactive_color: self.bar_color
    bar_width: dp(3)
    SelectableRecycleBoxLayout:
        orientation: 'vertical'
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
